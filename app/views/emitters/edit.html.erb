<h1><%= @emitter.appliance %></h1>
<%= form_with url: "/emitters/#{@emitter.id}", method: :patch, data: { turbo: false } do |f| %>
<%= f.label :appliance, "Name or Type"%></br>
<%= f.text_field :appliance, value: @emitter.appliance %></br>
<%= f.label :co2e_per_hour %></br>
<%= f.number_field :co2e_per_hour, value: @emitter.co2e_per_hour, step: :any %></br>
<%= f.label :hours_per_day %></br>
<%= f.number_field :hours_per_day, value: @emitter.hours_per_day, step: :any %></br>
<%= f.label :use, "Still being used?" %></br>
<%= f.check_box :use, checked: @emitter.use ? "checked" : "unchecked" %></br>
<%= f.submit "Update #{@emitter.appliance}" %>
<% end %>